mixin image(varb)
    img(src=varb style="flex:1")

block style 
    style  .main_flex a:nth-child(2) { background-color: #CCC }

block content
    .flex.page_1
        div(style="flex:2")
            video(autoplay controls muted)
                source(src="img/mmv.webm" type="video/webm")

        .flex(style="flex:1")
            +image('img/css1.jpg')
            +image('img/html.jpg')

    .flex.page_1
        - var n = 0;
            while n < 3
